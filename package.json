{
  "name": "gadgetguru-ai",
  "version": "2.0.0",
  "private": true,
  "description": "ðŸš€ Dynamic AI-Adaptive Laptop Intelligence Platform",
  "author": "GadgetGuru Team",
  "license": "MIT",
  "keywords": [
    "ai",
    "adaptive-ui",
    "laptop-recommendations",
    "openai",
    "supabase",
    "nextjs"
  ],
  "homepage": "https://gadgetguru-ai.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/v0/gadgetguru-ai"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "cd apps/web && npm start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "type-check": "pnpm run --recursive type-check",
    "clean": "turbo run clean",
    "db:push": "supabase db push",
    "db:seed": "cd supabase && npx supabase db seed",
    "db:reset": "supabase db reset",
    "db:pull": "supabase db pull",
    "db:generate-types": "supabase gen types typescript --project-id=your-project-id > apps/web/lib/database.types.ts",
    "api:dev": "pnpm --filter @gadgetguru/api dev",
    "web:dev": "pnpm --filter @gadgetguru/web dev",
    "deploy": "vercel --prod",
    "prepare": "husky install",
    "postinstall": "pnpm build"
  },
  "dependencies": {
    "next": "^14.0.0",
    "openai": "^4.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.7",
    "@types/node": "^20.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.7",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  }
}